<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="initial-scale=1.0, width=device-width" />
        <title>{% block title %}{% endblock %}</title>
    
        {% block globalstylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="/assets/css/global.css">
        {% endblock %}
    
        <!-- specific stylesheets -->
        {% block specificstylesheets %}{% endblock %}
        <!-- end specific stylesheets -->
    
        {% block globaltopjavascript %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
    
        <!-- specific top javascript -->
        {% block specifictopjavascript %}{% endblock %}
        <!-- end specific top javascript -->
    </head>

    <body>
        <!-- optional (biasanya loader) -->
        {% block optional %}{% endblock %}
        <!-- end optional (biasanya loader) -->

        <div class="page-wrapper">
            {% block globalpagecontent %}
                biasanya navigation
            {% endblock %}
            
            <div class="content-wrapper">
                <div class="content-top-wrapper">
                    <!-- specific page content top -->
                    {% block specificpagecontenttop %}
                        disini top-content (banner)
                    {% endblock %}
                    <!-- end specific page content top -->
                </div>
                <div class="content-mid-wrapper">
                    <!-- specific page content mid -->
                    {% block specificpagecontentmid %}
                        disini mid-content (main-info)
                    {% endblock %}
                    <!-- end specific page content mid -->
                </div>
                <div class="content-bot-wrapper">
                    <!-- specific page content bot -->
                    {% block specificpagecontentbot %}
                        disini bot-content (footer)
                    {% endblock %}
                    <!-- end specific page content bot -->
                </div>
            </div>
        </div>
        
        {% block globalbottomjavascript %}
            <script src="/assets/js/global.js" defer></script>
        {% endblock %}
        
        <!-- specific bottom javascript -->
        {% block specificbottomjavascript %}{% endblock %}
        <!-- end specific bottom javascript -->
    </body>
</html>
