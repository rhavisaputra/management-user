<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="initial-scale=1.0, width=device-width">
        <link rel="icon" type="image/png" sizes="16x16" href="https://symfony.com/favicons/favicon-16x16.png">
        <title>{% block title %}{% endblock %}</title>
    
        {% block globalstylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href={{ asset("/assets/css/global.css") }}>
        {% endblock %}
    
        <!-- specific stylesheets -->
        {% block specificstylesheets %}{% endblock %}
        <!-- end specific stylesheets -->
    
        {% block globaltopjavascript %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
    
        <!-- specific top javascript -->
        {% block specifictopjavascript %}{% endblock %}
        <!-- end specific top javascript -->
    </head>

    <body>
        <!-- optional (biasanya loader) -->
        {% block optional %}{% endblock %}
        <!-- end optional (biasanya loader) -->

        <div class="page-wrapper">
            {% block globalpagecontent %}
                {% set page = app.request.get('_route') %}
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href={{ path("index") }}>MANAGEMENT USER</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul class="navbar-nav m-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link{% if page == 'index' %} active{% endif %}" href={{ path("index") }}>Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link{% if page == 'user' %} active{% endif %}" href={{ path("user") }}>List</a>
                                </li>
                            </ul>
                            <span class="navbar-text">
                                Welcome, {% block userlogin %}User{% endblock %} | <a href="/process/plogout">Logout</a>
                            </span>
                        </div>
                    </div>
                </nav>
            {% endblock %}
            
            <div class="content-wrapper">
                <div class="content-top-wrapper">
                    <!-- specific page content top -->
                    {% block specificpagecontenttop %}
                        disini top-content (banner)
                    {% endblock %}
                    <!-- end specific page content top -->
                </div>
                <div class="content-mid-wrapper">
                    <!-- specific page content mid -->
                    {% block specificpagecontentmid %}
                        disini mid-content (main-info)
                    {% endblock %}
                    <!-- end specific page content mid -->
                </div>
                <div class="content-bot-wrapper">
                    <!-- specific page content bot -->
                    {% block specificpagecontentbot %}
                        <footer class="fixed-bottom text-center bg-dark text-white p-2">
                            rhavisaputra | &copy;2021
                        </footer>
                    {% endblock %}
                    <!-- end specific page content bot -->
                </div>
            </div>
        </div>
        
        {% block globalbottomjavascript %}
            <script src={{ asset("/assets/js/global.js") }} defer></script>
        {% endblock %}
        
        <!-- specific bottom javascript -->
        {% block specificbottomjavascript %}{% endblock %}
        <!-- end specific bottom javascript -->
    </body>
</html>
