{% extends 'base.html.twig' %}

{% block title %}{{ title }} - {{ subtitle }}{% endblock %}
{% block specificstylesheets %}
	<link rel="stylesheet" href="/assets/css/account/login.css">
{% endblock %}
{% block specifictopjavascript %}
	<script src="/assets/js/account/login.js" defer></script>
{% endblock %}
{% block optional %}{% endblock %}
{% block globalpagecontent %}
	{# {{ include('layout/header.html.twig') }} #}
{% endblock %}

{% block specificpagecontenttop %}{% endblock %}
{% block specificpagecontentmid %}
	<div class="container pt-2">
		<div class="row justify-content-center">
			<div class="col-lg-5 mt-5">
				<h1 class="text-center mb-4">{{ title }}</h1>
				{% if app.request.get('resultlogin') %}
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					{{ app.request.get('resultlogin') }}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
				{% endif %}
				<form class="form" action="/process/plogin" method="post">
					<div>
						<label for="email" class="required">Email</label>
						<input type="email" id="email" name="email" class="form-control mb-2" required="required">
					</div>
					<div>
						<label for="password" class="required">Password</label>
						<input type="password" id="password" name="password" class="form-control mb-3" required="required">
					</div>
					<button type="submit" class="btn btn-primary mt-2">Login</button>
				</form>
				<a href="/account/register">Register</a>
			</div>
		</div>
	</div>
{% endblock %}
{% block specificpagecontentbot %}
	{{ include('layout/footer.html.twig') }}
{% endblock %}

{% block specificbottomjavascript %}{% endblock %}